<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    custom:cardElevation="4dp"
    custom:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/villa"
            android:scaleType="fitXY"/>

        <com.maple.rimaproject.Font.CustomTextView
            android:id="@+id/txtProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ابتداءً من 475,000 ليرة تركية"
            android:layout_alignBottom="@+id/imgProject"
            android:background="#74000000"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textColor="#FFF"
            custom:typefaceAsset="ge_ss_light.otf" />

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/txtTags"
            android:layout_marginTop="7dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            style="@style/TagGroup"
            android:layout_below="@+id/imgProject"/>

        <com.maple.rimaproject.Font.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTags"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            custom:typefaceAsset="ge_ss_light.otf"
            android:text="مشروع سكني استثماري يجمع بين القسم الاوربي والاسيوي في اسطنبول, يقع ضمن مشروع سكني استثماري يجمع بين القسم الاوربي والاسيوي في اسطنبول, يقع ضمن" />
    </RelativeLayout>

</android.support.v7.widget.CardView>